<%= form_for(@pet) do |f| %>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, %w(Cachorro Gato Peixe Macaco), {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :found_at %>
    <%= f.date_field :found_at, class: 'form-control' %>
  </div>

  <%= f.submit 'Salvar', class: 'btn btn-primary btn-block' %>
<%end%>